{
    "configurations": [
        {
            "type": "firefox",
            "request": "attach",
            "name": "Attach",
            "preLaunchTask": "compile typescript to javascript"
        },
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "name": "Launch index.html",
            "file": "${workspaceFolder}/index.html",
            "preLaunchTask": "compile typescript to javascript"
        },
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "name": "Launch localhost",
            "url": "http://localhost/index.html",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "compile typescript to javascript"
        }
    ]
}
